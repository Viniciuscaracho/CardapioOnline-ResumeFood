<%= form_with(model: [:admin, order], local: true, class: "space-y-6") do |form| %>
  <% if order.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
      <h2><%= pluralize(order.errors.count, "erro") %> impediram este pedido de ser salvo:</h2>
      <ul class="list-disc list-inside">
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :customer_name, "Nome do Cliente", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :customer_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
      <%= form.label :customer_phone, "Telefone", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :customer_phone, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
    </div>
  </div>

  <div>
    <%= form.label :customer_email, "Email", class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :customer_email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
  </div>

  <div>
    <%= form.label :address, "Endereço", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :address, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :status, 
          options_for_select([
            ['Pendente', 'pending'],
            ['Confirmado', 'confirmed'],
            ['Em Preparação', 'preparing'],
            ['Pronto', 'ready'],
            ['Entregue', 'delivered']
          ], order.status), 
          {}, 
          class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
      <%= form.label :total_amount, "Valor Total", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1 relative rounded-md shadow-sm">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">R$</span>
        </div>
        <%= form.number_field :total_amount, step: 0.01, class: "pl-12 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
      </div>
    </div>
  </div>

  <div>
    <%= form.label :notes, "Observações", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", admin_orders_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    <%= form.submit "Atualizar Pedido", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %> 