<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Gerenciar Pedidos</h2>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pedido</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contato</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Valor</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @orders.each do |order| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">#<%= order.id %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= order.customer_name %></div>
                <div class="text-sm text-gray-500"><%= truncate(order.address, length: 30) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= order.customer_phone %></div>
                <div class="text-sm text-gray-500"><%= order.customer_email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                R$ <%= number_with_precision(order.total_amount, precision: 2) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                  <%= case order.status
                      when 'pending'
                        'bg-yellow-100 text-yellow-800'
                      when 'confirmed'
                        'bg-blue-100 text-blue-800'
                      when 'preparing'
                        'bg-orange-100 text-orange-800'
                      when 'ready'
                        'bg-green-100 text-green-800'
                      when 'delivered'
                        'bg-gray-100 text-gray-800'
                      else
                        'bg-gray-100 text-gray-800'
                      end %>">
                  <%= order.status&.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= order.created_at.strftime("%d/%m/%Y %H:%M") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2">
                  <%= link_to "Ver", admin_order_path(order), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Editar", edit_admin_order_path(order), class: "text-green-600 hover:text-green-900" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 