<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Pedido #<%= @order.id %></h2>
      <div class="flex space-x-3">
        <%= link_to "Editar", edit_admin_order_path(@order), class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Voltar", admin_orders_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Informações do Cliente -->
      <div class="space-y-6">
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Informações do Cliente</h3>
          <div class="space-y-3">
            <div>
              <span class="text-sm font-medium text-gray-500">Nome:</span>
              <p class="text-sm text-gray-900"><%= @order.customer_name %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500">Telefone:</span>
              <p class="text-sm text-gray-900"><%= @order.customer_phone %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500">Email:</span>
              <p class="text-sm text-gray-900"><%= @order.customer_email %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500">Endereço:</span>
              <p class="text-sm text-gray-900"><%= @order.address %></p>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Status do Pedido</h3>
          <div class="space-y-3">
            <div>
              <span class="text-sm font-medium text-gray-500">Status:</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ml-2
                <%= case @order.status
                    when 'pending'
                      'bg-yellow-100 text-yellow-800'
                    when 'confirmed'
                      'bg-blue-100 text-blue-800'
                    when 'preparing'
                      'bg-orange-100 text-orange-800'
                    when 'ready'
                      'bg-green-100 text-green-800'
                    when 'delivered'
                      'bg-gray-100 text-gray-800'
                    else
                      'bg-gray-100 text-gray-800'
                    end %>">
                <%= @order.status&.titleize %>
              </span>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500">Valor Total:</span>
              <p class="text-lg font-semibold text-green-600">R$ <%= number_with_precision(@order.total_amount, precision: 2) %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500">Data do Pedido:</span>
              <p class="text-sm text-gray-900"><%= @order.created_at.strftime("%d/%m/%Y às %H:%M") %></p>
            </div>
          </div>
        </div>

        <% if @order.notes.present? %>
          <div class="bg-gray-50 p-4 rounded-lg">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Observações</h3>
            <p class="text-sm text-gray-900"><%= @order.notes %></p>
          </div>
        <% end %>
      </div>

      <!-- Itens do Pedido -->
      <div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Itens do Pedido</h3>
          <% if @order.order_items.any? %>
            <div class="space-y-3">
              <% @order.order_items.each do |item| %>
                <div class="flex justify-between items-center py-2 border-b border-gray-200 last:border-b-0">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= item.product.name %></p>
                    <p class="text-xs text-gray-500">Qtd: <%= item.quantity %></p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-900">R$ <%= number_with_precision(item.unit_price, precision: 2) %></p>
                    <p class="text-xs text-gray-500">Total: R$ <%= number_with_precision(item.unit_price * item.quantity, precision: 2) %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">Nenhum item encontrado para este pedido.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 