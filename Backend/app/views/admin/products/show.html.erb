<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Detalhes do Produto</h2>
      <div class="flex space-x-3">
        <%= link_to "Editar", edit_admin_product_path(@product), class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Voltar", admin_products_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <% if @product.image_url.present? %>
          <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="w-full h-64 object-cover rounded-lg">
        <% else %>
          <div class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center">
            <svg class="h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
        <% end %>
      </div>

      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-medium text-gray-900"><%= @product.name %></h3>
          <p class="text-sm text-gray-500"><%= @product.category %></p>
        </div>

        <div>
          <h4 class="text-sm font-medium text-gray-900">Descrição</h4>
          <p class="mt-1 text-sm text-gray-600"><%= @product.description %></p>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <h4 class="text-sm font-medium text-gray-900">Preço</h4>
            <p class="mt-1 text-lg font-semibold text-green-600">R$ <%= number_with_precision(@product.price, precision: 2) %></p>
          </div>

          <div>
            <h4 class="text-sm font-medium text-gray-900">Status</h4>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @product.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @product.available? ? 'Disponível' : 'Indisponível' %>
            </span>
          </div>
        </div>

        <div>
          <h4 class="text-sm font-medium text-gray-900">Informações Adicionais</h4>
          <div class="mt-2 text-sm text-gray-600">
            <p><strong>Criado em:</strong> <%= @product.created_at.strftime("%d/%m/%Y às %H:%M") %></p>
            <p><strong>Última atualização:</strong> <%= @product.updated_at.strftime("%d/%m/%Y às %H:%M") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 