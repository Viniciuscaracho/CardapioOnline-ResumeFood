<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Dashboard Administrativo</h2>
    
    <!-- Estatísticas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-blue-50 p-6 rounded-lg">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-blue-600">Total de Produtos</p>
            <p class="text-2xl font-semibold text-blue-900"><%= @total_products %></p>
          </div>
        </div>
      </div>

      <div class="bg-green-50 p-6 rounded-lg">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-green-600">Total de Pedidos</p>
            <p class="text-2xl font-semibold text-green-900"><%= @total_orders %></p>
          </div>
        </div>
      </div>

      <div class="bg-yellow-50 p-6 rounded-lg">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-yellow-600">Pedidos Pendentes</p>
            <p class="text-2xl font-semibold text-yellow-900"><%= @pending_orders %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Pedidos Recentes -->
    <div class="mb-8">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Pedidos Recentes</h3>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @recent_orders.each do |order| %>
            <li>
              <div class="px-4 py-4 flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-700">#<%= order.id %></span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= order.customer_name %></div>
                    <div class="text-sm text-gray-500"><%= order.customer_phone %></div>
                  </div>
                </div>
                <div class="flex items-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= order.status %>
                  </span>
                  <span class="ml-4 text-sm text-gray-500">
                    R$ <%= number_with_precision(order.total_amount, precision: 2) %>
                  </span>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Produtos Recentes -->
    <div>
      <h3 class="text-lg font-medium text-gray-900 mb-4">Produtos Recentes</h3>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @recent_products.each do |product| %>
            <li>
              <div class="px-4 py-4 flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-green-300 flex items-center justify-center">
                      <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
                    <div class="text-sm text-gray-500"><%= product.category %></div>
                  </div>
                </div>
                <div class="flex items-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= product.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= product.available? ? 'Disponível' : 'Indisponível' %>
                  </span>
                  <span class="ml-4 text-sm text-gray-500">
                    R$ <%= number_with_precision(product.price, precision: 2) %>
                  </span>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div> 